<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.blockify">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blockify"
        tools:targetApi="31">

        <activity
            android:name=".activities.RouterActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Blockify">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />

        <activity
            android:name=".crash.activity.DefaultErrorActivity"
            android:process=":error_activity" />

        <provider
            android:name=".crash.provider.CrashInitProvider"
            android:authorities="ir.blockify.crashinitprovider"
            android:exported="false"
            android:initOrder="101" />
    </application>

</manifest>
